<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myapp.dao.UserDao">
	
	<resultMap type="myapp.domain.User" id="User">
		<id column="id" property="id" javaType="int" jdbcType="INTEGER"/>
		<result column="name" property="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result column="phone" property="phone" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result column="birthday" property="birthday" javaType="java.util.Date" jdbcType="DATE"/>
	</resultMap>
	
	<insert id="save" parameterType="myapp.domain.User" useGeneratedKeys="true" keyProperty="id">
		insert into 
		user_table(name,phone,birthday)
		values(#{name},#{phone},#{birthday})
	</insert>
	
	<update id="update" parameterType="myapp.domain.User">
		update user_table
		set name=#{name},phone=#{phone},birthday=#{birthday}
		where id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from user_table
		where id=#{id}
	</delete>
	
	<select id="findById" parameterType="int" resultMap="User">
		select *
		from user_table
		where id=#{id}
	</select>
	
	<select id="findAll" resultMap="User">
		select *
		from user_table
	</select>
	
</mapper>